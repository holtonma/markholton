
<div id="blog_post">
  <h2><%=h @post.title %></h2>
  <div>
    by: <%=h @post.name %>   
    <i>created <%= distance_of_time_in_words(@post.created_at, Time.now) %> ago</i>
  </div>

  <p class="blog"><%= @post.content.html_safe %></p>
</div>

